<% content_for :index_head do %>
<%= javascript_include_tag 'datatables' %>
<% end %>
<div class="container brewery-container">

  <h1><%= current_user.username %>'s Brewpubs</h1>
  <div class="datatable-style" data-source="<%= account_path(format: :json) %>">
    <table id="accounts-table" class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>City</th>
          <th>State</th>
          <th>Date Visited</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
      </tbody>
    </table>

  <br>

  <%= link_to 'New Brewery', new_brewery_path, method: :get %>
</div>
